.radial-bar {
  width: 450rpx;
  height: 450rpx;
  align-self: center;
}

.calories {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.calroies-goal {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: left;
  align-self: baseline;
  margin-left: 50rpx;
}

.calories-title {
  font-size: 40rpx;
  justify-content: flex-start;
  align-items: left;
}

.remaining-text {
  font-size: 24rpx;
  justify-content: flex-start;
  align-items: left;
}

.calories-graph {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.calories-details {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.nutrition-graph {
  width: 750rpx;
}

.horizontal-bar {
  width: 100%;
}

.meal_item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 30rpx;
}

.meal-img {
  width: 375rpx;
  height: 300rpx;
}
