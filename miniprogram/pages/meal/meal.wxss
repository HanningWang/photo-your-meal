.container {
  max-width: 100%;
  margin: 0 auto;
  background-color: #ffffff;
  padding: 16rpx;
}

.food-image {
  width: 100%;
  height: 512rpx;
  margin-bottom: 32rpx;
}

.food-image image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 32rpx;
  width: 100%;
}

.card-content {
  padding: 32rpx;
}

.card-content-narrow {
  padding: 16rpx;
  text-align: center;
  font-weight: bold;
  background-color: #2563eb;
  color: #ffffff;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
}

.nutrition-summary {
  display: flex;
  justify-content: space-between;
}

.nutrition-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.icon-small {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.icon-salad {
  color: greenyellow;
}

.icon-star {
  color: yellow;
}

.value {
  font-size: 28rpx;
  font-weight: 500;
}

.label {
  font-size: 24rpx;
  color: #666666;
}

.dish-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
}

.dish-info {
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

.dish-info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.dish-info-item {
  display: flex;
  align-items: center;
}

.dish-details {
  font-size: 28rpx;
}

.dish-details-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.dish-details-label {
  font-weight: 500;
  margin-right: 8rpx;
  min-width: 100rpx;
}

.return-button {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  background-color: #f3f4f6;
  border: 1rpx solid #d1d5db;
  border-radius: 8rpx;
  font-size: 32rpx;
}

.return-button text {
  margin-left: 8rpx;
}
