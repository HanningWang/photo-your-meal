.container {
  min-height: 100vh;
  background-color: #f3f4f6;
}

.header {
  width: 100%;
  background-color: #3b82f6;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.main {
  padding: 32rpx;
  display: flex;
  justify-content: center;
  width: 80%;
}

.card {
  width: 95%;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
}

.edit-button {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #3b82f6;
}

.icon-edit {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.card-content {
  padding: 24rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.value {
  font-size: 32rpx;
  color: #1f2937;
}

input, .picker {
  width: 90%;
  height: 80rpx;
  border: 1rpx solid #d1d5db;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
}

.picker {
  padding-left: 16rpx;
}

radio-group {
  display: flex;
}

radio-group label {
  margin-right: 32rpx;
}

.save-button {
  background-color: #3b82f6;
  color: #ffffff;
  font-size: 32rpx;
  padding: 16rpx 0;
  border-radius: 8rpx;
  text-align: center;
  margin-top: 50rpx;
}

.back-button {
  background-color: #3b82f6;
  color: #ffffff;
  font-size: 32rpx;
  padding: 16rpx 0;
  border-radius: 8rpx;
  text-align: center;
  margin-top: 32rpx;
  width: 90%;
  margin-bottom: 30rpx;
}

radio {
  transform: scale(0.8);
}
