.container {
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.header {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #1E90FF;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-left: 10rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.form-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.questionnaire {
  background-color: white;
  border-radius: 16rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-top: 20rpx;
}

.question-group {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.question-group:last-child {
  border-bottom: none;
}

.question {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

radio-group {
  display: flex;
  flex-wrap: wrap;
}

radio-group label {
  margin-right: 30rpx;
  margin-bottom: 10rpx;
}

/* Add these new styles for the radio buttons */
radio {
  transform: scale(0.8);
  margin-right: 5rpx;
}

input, .picker {
  background-color: #f5f5f5;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  font-size: 28rpx;
}

.submit-btn {
  margin-top: 40rpx;
  background-color: #1E90FF;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  width: 75%;
}
