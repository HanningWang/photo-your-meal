.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  width: 95%;
  overflow: hidden;
}

/* Styles specific to the first card (calorie card) */
.card:first-child {
  height: auto;
  min-height: 240rpx;
}

.card-header {
  padding: 20rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
}

.card-row {
  display: flex;
  flex-direction: row;
}

.card-subtitle {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
  margin-top: 4rpx;
}

.card-content {
  padding: 20rpx;
}

.card:first-child .card-content {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.calorie-circle {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.calorie-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.info-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 12rpx;
}

.info-label {
  display: flex;
  align-items: center;
  margin-right: 12rpx;
}

.info-value {
  font-size: 32rpx;
  font-weight: bold;
}

.iconfont {
  margin-right: 8rpx;
  width: 40rpx;
  height: 40rpx;
}

.large-icon {
  margin-right: 12rpx;
  width: 48rpx;
  height: 48rpx;
}

.small-icon {
  margin-right: 4rpx;
  width: 32rpx;
  height: 32rpx;
}

.icon-flag {
  color: #22c55e;
}

.icon-utensils {
  color: #3b82f6;
}

.nutrient-item {
  margin-bottom: 16rpx;
}

.nutrition-title {
  display: flex;
  flex-direction: row;
}

.nutrient-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.nutrient-name {
  font-size: 28rpx;
  font-weight: 500;
}

.nutrient-values {
  font-size: 24rpx;
  color: #6b7280;
}

.progress-bar {
  height: 12rpx;
  background-color: #e5e7eb;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress {
  height: 100%;
  background-color: #3b82f6;
  border-radius: 6rpx;
  transition: width 0.5s ease-in-out;
}

.meal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #e5e7eb;
  margin-bottom: 16rpx;
}

.meal-line {
  display: flex;
  flex-direction: row;
  margin-left: 15rpx;
}

.meal-name {
  font-size: 32rpx;
  font-weight: bold;
}

.meal-details {
  font-size: 28rpx;
  color: #3b82f6;
  margin-right: 20rpx;
}

.meal-content {
  display: flex;
}

.meal-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
}

.meal-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.meal-nutrients {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 8rpx;
  font-size: 24rpx;
}

.meal-dishes {
  font-size: 24rpx;
  color: #6b7280;
  margin-left: 15rpx;
}