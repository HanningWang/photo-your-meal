.container {
  padding: 40rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-wrapper {
  margin-bottom: 40rpx;
  margin-top: 60rpx;
  padding: 0;
  width: auto;
  height: 240rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid #007bff;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 100%;
  height: 100%;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  text-align: center;
  font-size: 32rpx;
  border: 2rpx solid #ced4da;
  border-radius: 8rpx;
  background-color: #ffffff;
  margin-bottom: 40rpx;
}

.submit-button {
  width: 100%;
  height: 88rpx;
  line-height: 55rpx;
  text-align: center;
  background-color: #007bff;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 44rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 123, 255, 0.3);
  transition: all 0.3s ease;
}

.submit-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 5rpx rgba(0, 123, 255, 0.3);
}
