/* pages/user/user.wxss */
.user-profile {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.user-info {
  width: 100%;
  padding: 40rpx 0;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}

.username {
  margin-top: 20rpx;
  font-size: 36rpx;
  color: #333;
}
