<!-- pages/user/user.wxml -->
<view class="user-container">
  <view class="header">
    <image class="avatar" src="{{userInfo.avatarUrl || '../../images/user.png'}}" mode="aspectFill"></image>
    <text class="username">{{userInfo.nickName || '用户名'}}</text>
  </view>
  
  <view class="menu-list">
    <view class="menu-item" bindtap="navigateTo" data-page="myInfo">
      <text>我的信息</text>
      <image class="arrow" src="../../images/arrow-right.svg" mode="aspectFit"></image>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-page="myRecords">
      <text>我的记录</text>
      <image class="arrow" src="../../images/arrow-right.svg" mode="aspectFit"></image>
    </view>
    <view class="menu-item" bindtap="navigateTo" data-page="contactUs">
      <text>联系我们</text>
      <image class="arrow" src="../../images/arrow-right.svg" mode="aspectFit"></image>
    </view>
  </view>
</view>
