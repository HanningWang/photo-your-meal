.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  padding: 0 30rpx;
}

.btn {
  width: 80%;
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  border-radius: 10rpx;
  font-size: 32rpx;
  text-align: center;
}

.btn-primary {
  background-color: #007AFF;
  color: #ffffff;
}

.btn-secondary {
  background-color: #F2F2F2;
  color: #333333;
}

.explanation {
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #888888;
  text-align: center;
}